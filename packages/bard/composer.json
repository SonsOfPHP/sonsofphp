{
    "name": "sonsofphp/bard",
    "description": "Tool to help manage PHP monorepos using GitHub",
    "keywords": [
        "bard",
        "sonsofphp",
        "monorepo",
        "manager"
    ],
    "type": "project",
    "bin": [
        "bin/bard"
    ],
    "require": {
        "php": ">=8.0",
        "sonsofphp/event-dispatcher": "^0.3@dev",
        "sonsofphp/json": "^0.3@dev",
        "sonsofphp/version": "^0.3@dev",
        "symfony/console": "^4|^5|^6",
        "symfony/dotenv": "^5|^6",
        "symfony/finder": "^5|^6",
        "symfony/process": "^5|^6"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "SonsOfPHP\\Bard\\": "src/"
        },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "SonsOfPHP\\Bard\\Tests\\": "Tests/"
        }
    },
    "prefer-stable": true,
    "minimum-stability": "dev",
    "config": {
        "sort-packages": true
    },
    "extra": {
        "sort-packages": true,
        "branch-alias": {
            "dev-main": "0.3.x-dev"
        }
    },
    "support": {
        "issues": "https://github.com/SonsOfPHP/sonsofphp/issues",
        "forum": "https://github.com/orgs/SonsOfPHP/discussions",
        "docs": "https://docs.sonsofphp.com",
        "chat": "https://discord.gg/sdVxNhFqND"
    },
    "authors": [
        {
            "name": "Joshua Estes",
            "email": "joshua@sonsofphp.com"
        }
    ],
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/JoshuaEstes"
        },
        {
            "type": "tidelift",
            "url": "https://tidelift.com/subscription/pkg/packagist-sonsofphp-sonsofphp"
        }
    ]
}